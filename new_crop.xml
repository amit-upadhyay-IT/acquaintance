                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ripening temp. condition:21-37 °C"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pH range : 5.5 - 6.5"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
