<android.support.v4.widget.NestedScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_10"
        tools:context="krishikalyan.aupadhyay.myapp.farmersfield.fragments.NewCropFragment">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="April"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:layout_marginTop="4dp"
            android:id="@+id/firstLinearLayout"
            android:background="#2c436fac"
            android:orientation="vertical">

            <View
                android:id="@+id/lineView"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="?android:attr/listDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prediction_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop Name: Watermelon"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prediction_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rainfall condition : 75-100mm"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/first_line_prediction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Germination temp condictions: 21-27 °C"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/second_line_prediction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ripening temp. condition:18-35 °C"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/third_line_prediction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pH range : 6.0 - 6.8"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/image_prediction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="48dp" />

                <Button
                    android:id="@+id/item_detail_prediction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD"
                    android:textSize="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/image_prediction"
                    android:layout_alignRight="@+id/image_prediction"
                    android:layout_alignEnd="@+id/image_prediction" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:id="@+id/secondLinearLayout"
            android:layout_marginTop="4dp"
            android:background="#2c436fac"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="?android:attr/listDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop Name: Muskmelon"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rainfall condition : 75-100mm"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Germination temp condition: 15-20 °C"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ripening temp. condition:18-24 °C"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pH range : 6.5 - 7.5"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/image_prediction_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="48dp" />

                <Button
                    android:id="@+id/item_detail_prediction_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD"
                    android:textSize="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/image_prediction_two"
                    android:layout_alignRight="@+id/image_prediction_two"
                    android:layout_alignEnd="@+id/image_prediction_two" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="June"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:id="@+id/thirdLinearLayout"
            android:layout_marginTop="4dp"
            android:background="#2c436fac"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="?android:attr/listDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
