                    android:textSize="48dp" />

                <Button
                    android:id="@+id/item_detail_prediction_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD"
                    android:textSize="16dp"
                    android:layout_marginTop="8dp"
